<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoviesbyYearActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="239dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_moviesByYearTitle"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_TitleLabel_Year"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_TitleLabel_Year"
        android:textColor="#0F0D0D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_movieName_Year"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_movieName_Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_TitleLabel_Year"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_DescriptionLabel_Year"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:text="@string/tv_DescriptionLabel_Year"
        android:textColor="#050404"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movieName_Year" />

    <TextView
        android:id="@+id/tv_description_Year"
        android:layout_width="408dp"
        android:layout_height="175dp"
        android:layout_marginTop="8dp"
        android:lines="10"
        android:text="@string/tv_description_Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_DescriptionLabel_Year" />

    <TextView
        android:id="@+id/tv_GenreLabel_Year"
        android:layout_width="107dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_GenreLabel_Year"
        android:textColor="#110F0F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_Year" />

    <TextView
        android:id="@+id/tv_ratingLabel_year"
        android:layout_width="103dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_RatingLabel_Year"
        android:textColor="#030202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_ratingValue_Year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_GenreLabel_Year" />

    <TextView
        android:id="@+id/tv_YearLabel_Year"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:text="@string/tv_YearLabel_Year"
        android:textColor="#030202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ratingLabel_year" />

    <TextView
        android:id="@+id/tv_IMDBLabel_Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/tv_IMDBLabel_Year"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_YearLabel_Year" />

    <TextView
        android:id="@+id/tv_genreValue_Year"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_genreValue_year"
        app:layout_constraintStart_toEndOf="@+id/tv_GenreLabel_Year"
        app:layout_constraintTop_toBottomOf="@+id/tv_description_Year" />

    <TextView
        android:id="@+id/tv_ratingValue_Year"
        android:layout_width="254dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="@string/tv_ratingValue_Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_genreValue_Year" />

    <TextView
        android:id="@+id/tv_yearValue_Year"
        android:layout_width="262dp"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        android:text="@string/tv_yearValue_Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_YearLabel_Year"
        app:layout_constraintTop_toBottomOf="@+id/tv_ratingValue_Year" />

    <TextView
        android:id="@+id/tv_imdbValue_Year"
        android:layout_width="396dp"
        android:layout_height="46dp"
        android:layout_marginTop="18dp"
        android:text="@string/tv_imdbValue_Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_IMDBLabel_Year" />

    <Button
        android:id="@+id/btn_Finish_Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_finish_year"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="146dp" />

    <ImageView
        android:id="@+id/iv_first"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/first" />

    <ImageView
        android:id="@+id/iv_previous"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_first"
        app:srcCompat="@drawable/previous" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_last"
        app:srcCompat="@drawable/next" />

    <ImageView
        android:id="@+id/tv_last"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/last"
        tools:layout_editor_absoluteX="325dp" />
</androidx.constraintlayout.widget.ConstraintLayout>